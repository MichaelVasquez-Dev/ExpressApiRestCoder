<main class="vh-100 gradient-custom overflow">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-8 col-xl-6">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 text-center">Iniciar sesión</h3>
            <form>
              <div class="form-outline mb-4" data-mdb-input-init>
                <input type="email" id="loginEmail" class="form-control form-control-lg" />
                <label class="form-label" for="loginEmail">Correo electrónico</label>
              </div>

              <div class="form-outline mb-4" data-mdb-input-init>
                <input type="password" id="loginPassword" class="form-control form-control-lg" />
                <label class="form-label" for="loginPassword">Contraseña</label>
              </div>

              <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="rememberMe" />
                  <label class="form-check-label" for="rememberMe">Recordarme</label>
                </div>
                <a href="#">¿Olvidaste tu contraseña?</a>
              </div>

              <div class="text-center">
                <button type="button" class="btn btn-primary btn-lg w-100" onclick="signin()">Ingresar</button>
              </div>

              <div class="mt-4 text-center">
                <p>¿No tienes una cuenta? <a href="/register">Regístrate</a></p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<script src="/scripts/login.js"></script>
